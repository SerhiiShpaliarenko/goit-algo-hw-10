import pulp

# 1. Створюємо модель
# LpMaximize означає, що ми хочемо знайти найбільше значення (максимізувати виробництво)
model = pulp.LpProblem("Maximize_Production", pulp.LpMaximize)

# 2. Оголошуємо змінні рішення
# lowBound=0 означає, що ми не можемо виробити від'ємну кількість напоїв
# cat='Integer' означає, що ми рахуємо напої в цілих пляшках/пакетах (не можна виробити 1.5 пляшки)
lemonade = pulp.LpVariable("Lemonade", lowBound=0, cat='Integer')
fruit_juice = pulp.LpVariable("Fruit_Juice", lowBound=0, cat='Integer')

# 3. Додаємо цільову функцію (те, що ми хочемо максимізувати)
# Ми хочемо максимізувати загальну кількість продуктів: Лимонад + Сік
model += lemonade + fruit_juice, "Total_Products"

# 4. Додаємо обмеження ресурсів (Resource Constraints)

# Обмеження на Воду (100 од.)
# Лимонад потребує 2 од., Сік потребує 1 од.
model += 2 * lemonade + 1 * fruit_juice <= 100, "Water_Constraint"

# Обмеження на Цукор (50 од.)
# Лимонад потребує 1 од., Сік не потребує цукру
model += 1 * lemonade <= 50, "Sugar_Constraint"

# Обмеження на Лимонний сік (30 од.)
# Лимонад потребує 1 од., Фруктовий сік не потребує
model += 1 * lemonade <= 30, "Lemon_Juice_Constraint"

# Обмеження на Фруктове пюре (40 од.)
# Лимонад не потребує, Фруктовий сік потребує 2 од.
model += 2 * fruit_juice <= 40, "Fruit_Puree_Constraint"

# 5. Розв'язуємо задачу
model.solve()

# 6. Виводимо результати
print(f"Статус розв'язання: {pulp.LpStatus[model.status]}")
print("-" * 30)
print(f"Вироблено Лимонаду: {pulp.value(lemonade)} од.")
print(f"Вироблено Фруктового соку: {pulp.value(fruit_juice)} од.")
print("-" * 30)
print(f"Максимальна загальна кількість продуктів: {pulp.value(model.objective)}")
